@model IEnumerable<B201210597.Models.DTO.Clinic>
@{
    Layout = null;
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>B201210597</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WEB_PROJE.styles.css" asp-append-version="true" />

</head>
<header>

    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid text-center">
            <h1 class="mx-auto" style="color: blue;">[ADMİN SAYFA]</h1>


        </div>
        <a href="cikis" class="btn btn-primary" style="color: black;">ÇIKIŞ</a>


    </nav>



</header>
<body>
    <form class="d-flex">
        <input class="form-control me-sm-2" type="text" placeholder="Search">
        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
    </form>
    <div class="container">
        <main role="main" class="pb-3">


    </div>
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Klinik Liste</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Klinik" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> &nbsp; Yeni Klinik Ekle
                </a>
            </div>
        </div>
        <br /><br />

        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Klinik ID
                    </th>
                    <th>
                        Kilinik Adi
                    </th>
                    <th>
                        Departmav Adi
                    </th>
                   
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">
                            @obj.ClinicId
                        </td>
                        <td width="30%">
                            @obj.ClinicName
                        </td>
                        <td width="30%">
                            @obj.DepartmentId
                        </td>
                       
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Klinik" asp-action="Edit" asp-route-id="@obj.ClinicId"
                               class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                                <a asp-controller="Klinik" asp-action="Delete" asp-route-id="@obj.ClinicId"
                               class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
        <a asp-controller="Admin" asp-action="Display" class="btn btn-secondary" style="width:150px">
            Geri Dön
        </a>
    </div>
    </main>

    <footer class="border-top footer text-muted">
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

</body>










