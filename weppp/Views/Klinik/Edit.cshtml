@model B201210597.Models.DTO.Clinic
@{
	Layout = null;
}

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>B201210597</title>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/WEB_PROJE.styles.css" asp-append-version="true" />

</head>
<header>
	<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
		<div class="container-fluid text-center">
			<h1 class="mx-auto" style="color: blue;">[ADMİN SAYFA]</h1>
		</div>


	</nav>
</header>
<div class="container mt-3">
	<div class="row justify-content-center">
		<div class="col-md-6">
			<form method="post" asp-action="Edit">
				<div class="border p-3 mt-4">
					<div class="row pb-2">
						<h2 class="text-primary">Guncele</h2>
						<hr />
					</div>
					@*<div asp-validation-summary="All"></div>*@
					<div class="mb-3">
						<label asp-for="ClinicName"></label>
						<input asp-for="ClinicName" class="form-control" />
						<span asp-validation-for="ClinicName" class="text-danger"></span>
					</div>
					
					
					<div class="mb-3">
						<label asp-for="DepartmentId"></label>
						<input asp-for="DepartmentId" class="form-control" />
						<span asp-validation-for="DepartmentId" class="text-danger"></span>
					</div>
					<button type="submit" class="btn btn-primary" style="width:150px">Guncele</button>
					<a asp-controller="Klinik" asp-action="Index" class="btn btn-secondary" style="width:150px">
						Geri Dön
					</a>
				</div>
			</form>
		</div>
	</div>
</div>
@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
